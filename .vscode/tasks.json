{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build iOS Simulator",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
                "-scheme",
                "DeetsApp",
                "-destination",
                "platform=iOS Simulator,name=iPhone 16 26.0",
                "build"
            ],
            "problemMatcher": [
                "$swiftc"
            ]
        }
    ]
}